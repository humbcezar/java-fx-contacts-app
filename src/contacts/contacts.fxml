<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.GridPane?>
<GridPane fx:controller="contacts.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" >
    <TableView fx:id="contacts"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0"
               GridPane.columnSpan="1"
               GridPane.hgrow="ALWAYS"
               GridPane.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="firstName" text="First Name">
                <cellValueFactory>
                    <PropertyValueFactory property="firstName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="lastName" text="Last Name">
                <cellValueFactory>
                    <PropertyValueFactory property="lastName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="phoneNumber" text="Phone Number">
                <cellValueFactory>
                    <PropertyValueFactory property="phoneNumber" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="notes" text="Notes">
                <cellValueFactory>
                    <PropertyValueFactory property="notes" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</GridPane>